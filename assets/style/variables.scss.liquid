:root {
	--border-radius: 0px;
	--color_bg: transparent;
	--color_text: inherit;
	--color_bg_content:{{ settings.color_bg_content }};
	--color_bg_all:{{ settings.color_bg_all }};
}

body{
	font-family: '{{ settings.font_family }}';
	font-size: {{ settings.font_size }};
	color: #000000; 
  background-color: #ffffff;

  &:after{
  	background-color: {{ settings.color_bg_content }};
  }
}
button,
input,
optgroup,
select,
textarea{
	font-family: '{{ settings.font_family }}';
	border-radius: var(--border-radius);
	background-color: var(--color_bg);
	color: var(--color_text);
}
input {
	&::placeholder {
		color: var(--color_text);
	}
}
.slct,
button.option-value{
	font-size: {{ settings.font_size }};
	cursor: pointer;
	color: #000000;
	border: 1px solid #000000;

}
.b-bottom{
	border-bottom: 1px solid #a84466;
}
.b-top{
	border-top:  1px solid #a84466;
}
.collection-filter{
	.filter-items-wrapper{
		border-bottom: 1px solid black;
	}
}
.collection-filter{
	.irs-line{
		background-color: {{ settings.color_p1_special }}40;
	}
	.irs-bar{
		background-color: #FF4B79;
	}
	.irs-slider.from,
	.irs-slider.to{
		background-color: #FF4B79;
	}
}
.product-info{
	.product-props{
		label:before{
			background-color: {{ settings.color_p1_button_bg }};
		}
	}
}
