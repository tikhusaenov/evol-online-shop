<div class="row cart-item" data-item-accessory="{{ item.order_line_id }}" data-product-id="{{ item.product.id }}" data-item-id="{{ item.id }}">
  <div class="cell-2 item-image">
    <a class="item-img" href="{{item.product.url}}?variant_id={{item.variant.id}}">
      <span class="image-container is-square">
        <img  src="{{ item.variant.first_image.medium_url }}">
      </span>
    </a>
  </div>
  <div class="cell-3 show-flex flex-middle item-info">
    <div class="item-info-inner">
      <div class="item-title">
        <a class="item-title-link" href="{{item.product.url}}?variant_id={{item.variant.id}}">
          {{ item.product.title }}
        </a>
      </div>
      {% if item.variant.option_values.size > 0 %}
      <div class="item-variant">
        {% for option_value in item.variant.option_values %}
        <div class="item-option_name">
          <span>{{ option_value.option_name.title }}</span> - <span>{{ option_value.title }}</span>
        </div>
        {% endfor %}
      </div>
      {% endif %}

    </div>
  </div>
  <div class="cell-2 show-flex flex-middle flex-start">
    <div class="item-money">
      {{ item.sale_price | money }}
    </div>
  </div>
  <div class="cell-2 show-flex flex-middle flex-start">
    {% include "quantity", input_type: 'cart' %}
  </div>
  <div class="cell-2 show-flex flex-middle flex-start">
    <div class="item-total_price" data-cartman-item-total-price>
      {{ item.total_price | money }}
    </div>
  </div>
  <div class="cell-1 show-flex flex-middle flex-end">
    <div class="item-remove">
      <button class="item-delete text-center" type="bttn" data-item-delete="{{ item.id }}">
        <span>
          <img src="{{ 'delete.svg' | asset_url }}" alt="">
        </span>
      </button>
    </div>
  </div>
</div>
